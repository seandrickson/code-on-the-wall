{
  "name": "code-on-the-wall",
  "version": "1.0.0",
  "description": "Generate wallpaper from syntax highlighted, minified code",
  "main": "index.js",
  "author": "Sean Hendrickson",
  "license": "Apache-2.0",
  "repository": "git@github.com:seandrickson/code-on-the-wall.git",
  "scripts": {
    "prestart": "npm run test",
    "start": "node index.js",
    "test": "eslint 'public/**/*.{mjs,js}'"
  },
  "dependencies": {
    "express": "^4.17.3"
  },
  "devDependencies": {
    "eslint": "^8.13.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.8",
    "prettier": "^2.6.2",
    "puppeteer": "^13.5.2",
    "yargs": "^17.4.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{mjs,js,css,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{mjs,js}": [
      "eslint --fix",
      "git add"
    ]
  }
}
