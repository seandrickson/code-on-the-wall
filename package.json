{
  "name": "code-on-the-wall",
  "version": "1.0.0",
  "description": "Generate wallpaper from syntax highlighted, minified code",
  "main": "index.js",
  "author": "Sean Hendrickson",
  "license": "Apache-2.0",
  "repository": "git@github.com:seandrickson/code-on-the-wall.git",
  "scripts": {
    "postinstall": "npm run build:hljs && npm run copy:hljs",
    "build:hljs": "cd ./node_modules/highlight.js && npm i && node ./tools/build.js :common",
    "copy:hljs": "mkdir -p ./src/lib/highlight && rm -rf ./src/lib/highlight && ncp node_modules/highlight.js/build ./src/lib/highlight -r",
    "prestart": "npm run test",
    "start": "node index.js",
    "test": "eslint --ext .mjs ./src/**"
  },
  "dependencies": {
    "highlight.js": "github:highlightjs/highlight.js#9.15.9"
  },
  "devDependencies": {
    "eslint": "^6.1.0",
    "husky": "^3.0.2",
    "lint-staged": "^9.2.1",
    "ncp": "^2.0.0",
    "prettier": "^1.18.2",
    "puppeteer": "^1.19.0",
    "serve": "^11.1.0",
    "yargs": "^13.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{mjs,js,css,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{mjs,js}": [
      "eslint --fix",
      "git add"
    ]
  }
}
