{
  "name": "code-on-the-wall",
  "version": "1.0.0",
  "description": "Generate wallpaper from syntax highlighted, minified code",
  "main": "index.js",
  "author": "Sean Hendrickson",
  "license": "Apache-2.0",
  "repository": "git@github.com:seandrickson/code-on-the-wall.git",
  "scripts": {
    "prestart": "npm run test",
    "start": "node index.js",
    "test": "eslint 'public/**/*.{mjs,js}'",
    "serve": "cd public && serve"
  },
  "dependencies": {
    "serve-handler": "^6.1.2"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "husky": "^4.0.10",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "puppeteer": "^2.0.0",
    "serve": "^11.3.0",
    "yargs": "^15.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{mjs,js,css,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{mjs,js}": [
      "eslint --fix",
      "git add"
    ]
  }
}
