{
  "name": "code-on-the-wall",
  "version": "1.0.0",
  "description": "Generate wallpaper from syntax highlighted, minified code",
  "main": "index.js",
  "author": "Sean Hendrickson",
  "license": "Apache-2.0",
  "repository": "git@github.com:seandrickson/code-on-the-wall.git",
  "scripts": {
    "prestart": "npm run test",
    "start": "node index.js",
    "test": "eslint 'public/**/*.{mjs,js}'"
  },
  "dependencies": {},
  "devDependencies": {
    "eslint": "^7.11.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.2",
    "prettier": "^2.1.2",
    "puppeteer": "^5.3.1",
    "serve-handler": "^6.1.3",
    "yargs": "^16.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{mjs,js,css,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{mjs,js}": [
      "eslint --fix",
      "git add"
    ]
  }
}
